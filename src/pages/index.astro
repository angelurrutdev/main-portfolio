---
import AboutMe from "../components/AboutMe.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import CodeIcon from "../components/icons/Code.astro";
import Experience from "../components/Experience.astro";
import Footer from "../components/Footer.astro";
import Layout from "../layouts/Layout.astro";
import ProfileShare from "../components/icons/ProfileShare.astro";
import TrendingUpIcon from "../components/icons/trendingup.astro";
import Projects from "../components/Projects.astro";
import SectionContainer from "../components/SectionContainer.astro";
import SectionHeader from "../components/SectionHeader.astro";
import Hero from "../components/Hero.astro";
import EmailForwadIcon from "../components/icons/EmailForwad.astro";
import Contact from "../components/Contact.astro";
import Tech from "../components/Tech.astro";
---

<Layout
	title="Portfolio | Angel Urrutia"
	description="Contrata a Angel Urrutia para crear tu pagina web o app movil Desarollador web Programador Web Especializado"
>
	<main class="px-4">
		<SectionHeader id="inicio">
			<Hero />
		</SectionHeader>

		<!-- <SectionContainer id="experiencia">
			<h2
				class="font-bold text-4xl text-white justify-center flex gap-x-3 items-center pt-10"
			>
				<Briefcase class="size-8 mt-2" />
				 Experiencia Laboral
			</h2>
			<Experience />
		</SectionContainer> -->

		<SectionContainer class="w-full mt-9" id="proyectos">
			<h2
				class="flex items-center justify-center mb-6 text-4xl font-bold gap-x-3 text-black/80 dark:text-white"
			>
				<CodeIcon class="size-8 mt-2" />
				 Proyectos
			</h2>
			<Projects />
		</SectionContainer>

		<SectionContainer id="tecnologías" class="mt-20">
			<h2
				class="flex items-center justify-center mb-6 text-4xl font-bold gap-x-3 text-black/80 dark:text-white pt-6"
			>
				<TrendingUpIcon class="size-8 mt-2" />
				 Tecnologías
			</h2>
			<Tech />
		</SectionContainer>

		<SectionContainer id="sobre-mi" class="mt-20">
			<h2
				class="flex items-center justify-center mb-6 text-4xl font-bold gap-x-3 text-black/80 dark:text-white pt-6"
			>
				<ProfileShare class="size-8 mt-1" />
				 Sobre Mí
			</h2>

			<AboutMe />
		</SectionContainer>

		<SectionContainer id="contacto">
			<h2
				class="flex items-center justify-center mb-6 text-4xl font-bold gap-x-3 text-black/80 dark:text-white pt-6"
			>
				<EmailForwadIcon class="size-8 mt-2" />
				 Contacto
			</h2>

			<Contact />
		</SectionContainer>
	</main>
</Layout>
