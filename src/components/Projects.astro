---
import GitHub from "./icons/GitHub.astro";
import HTML from "./icons/Html.astro";
import Tailwind from "./icons/Tailwind.astro";
import CSS from "./icons/CSS.astro";
import JS from "./icons/JavaScript.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";

const TAGS = {
    HTML: {
        name: "HTML",
        class: "bg-[#191d2d] text-white font-semibold",
        icon: HTML,
    },
    CSS: {
        name: "CSS",
        class: "bg-[#191d2d] text-white font-semibold",
        icon: CSS,
    },
    TAILWIND: {
        name: "Tailwind CSS",
        class: "bg-[#191d2d] text-white font-semibold",
        icon: Tailwind,
    },

    JS: {
        name: "JavaScript",
        class: "bg-[#191d2d] text-white font-semibold",
        icon: JS,
    },
};
const PROJECTS = [
    {
        title: "Clon de la Mac Mini M1",
        description:
            "Pagina de la Mac Mini M1 de Apple, moderna, sencilla y minimalista. La web fue hecha con HTML, CSS Y JavaScript, con un dise√±o moderno y lindas animaciones hechas en CSS  sin ninguna libreria. ",
        link: "https://clonmacmini.vercel.app/",
        github: "https://github.com/angelurrutdev/Clon-macmini-M1",
        image: "/projects/MacMiniM1.webp",
        tags: [TAGS.HTML, TAGS.CSS, TAGS.JS],
    },
];
---

<div class="">
    {
        PROJECTS.map(({ image, title, description, tags, link, github }) => (
            <article class="mb-30">
                <div class="" />

                <div class="">
                    <h3 class="text-2xl font-bold text-yellow-500 mb-2 dark:text-yellow-200">
                        {title}
                    </h3>
                    <div class="">
                        <div class="text-base sm:text-base text-gray-500 mb-0 text-pretty line-clamp-2 dark:text-gray-200">
                            {description}
                        </div>
                        <ul class="flex gap-x-1 flex-row mb-3 pt-4">
                            {tags.map((tag) => (
                                <li class=" text-white bg-white/5 rounded-full inline-block mx-1 md:mx-1  px-2 md:py-1 md:px-2.5 text-xs md:text-xs transition hover:bg-white/10 ">
                                    <span
                                        class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
                                    >
                                        <tag.icon class="size-4" />
                                        {tag.name}
                                    </span>
                                </li>
                            ))}
                        </ul>
                        <div class="rounded xl overflow-clip">
                            <img
                                class="rounded-xl hover:scale-105 transition-transform duration-500 shadow-2xl shadow-white/10 aspect-video"
                                loading="lazy"
                                src={image}
                            />
                        </div>
                        <footer class="flex flex-wrap m-6 justify-center items-center mb-6">
                            {github && (
                                <LinkButton href={github}>
                                    <GitHub class="size-6" />
                                    Codigo
                                </LinkButton>
                            )}

                            {link && (
                                <LinkButton href={link}>
                                    <Link class="size-4" />
                                    Website
                                </LinkButton>
                            )}
                        </footer>
                    </div>
                </div>
            </article>
        ))
    }
</div>
